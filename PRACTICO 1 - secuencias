int invertirNum(int Num){
	int inv=0;
		while (Num != 0){
			inv = inv * 10;
			inv = inv + Num % 10;
			Num = Num / 10;
	}
	return(inv);
}

void funcion1(int n){
	int i,Num=0;

	for(i=0;i<n;i++){
		Num=Num+3;
		cout<<"\t"<<Num;
	}
}

void funcion2(int n){
	int i,Num,c=1;

	for(i=0;i<n;i++){
		Num=powf(c,2);
		c++;
		Num=invertirNum(Num);
		cout<<endl<<"\t"<<Num;
	}
}

int sumaDig(int n){
	int d,s=0;

	while(n>0){
		d=n%10;
		n=n/10;
		s=s+d;
	}
	return(s);
}

void funcion3(int n){
	int d=1, i,Num=0;

	for(i=0;i<n;i++){
		Num=Num+d;
		d=sumaDig(Num);
		cout<<endl<<"\t"<<Num;
	}
}

void funcion4(int n){
	int d=1, i,Num=0;

	for(i=0;i<n;i++){
		Num=Num+d;
		d=sumaDig(Num);
		cout<<endl<<"\t"<<d;
	}
}

